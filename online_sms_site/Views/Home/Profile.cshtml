    <div class="modal" id="services" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable "  >
            <div class="modal-content border border-primary">
                <div class="modal-header bg-info">
                    <h3 class="modal-title text-dark">Service Activated</h3>
                </div>
                <div class="modal-body">
                    @{var myid = Convert.ToInt32(Session["user_id"]);
                        if (Model.services_.Any(item => item.card.user_Id == myid))
                        {
                            <p>
                                Your activated services are :
                            </p>
                            foreach (var item in Model.services_)
                            {


                                if (item.service.Id == item.card.activated_service && item.card.user_Id == myid)
                                {
                                    <p>@item.service.service_title</p>

                                }
                            }

                        }
                        else
                        {
                            <p> No Service Activated</p>
                        }}
                    
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-primary w-50" data-bs-dismiss="modal">OK</button>
                </div>
