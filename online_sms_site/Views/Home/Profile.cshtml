@model online_sms_site.Models.mainmodel
@{
    Layout = "~/Views/Shared/_userlayout.cshtml";
    ViewBag.Title = "Profile";
}
@{
    if (Session["login_complete"] != null)
    {
        @Html.Raw(Session["login_complete"])
        Session.Remove("login_complete");
    }
    if (Session["img_msg"] != null)
    {
        @Html.Raw(Session["img_msg"])
        Session.Remove("img_msg");
    }

    if (Session["updated"] != null)
    {
        @Html.Raw(Session["updated"])
        Session.Remove("updated");
    }
}


