@model online_sms_site.Models.mainmodel

@{
    ViewBag.Title = "mychat";
    //Layout = "~/Views/Shared/_userlayout.cshtml";
    Layout = null;

}


@*<div class="coversation-divider"><span>Today</span></div>*@
@{
    var myid = Convert.ToInt32(Session["user_id"]);
    foreach (var x in Model.model5)
    {
        if (x.To == myid && x.status == true)
        {
            <li class="conversation-item me">

                <div class="conversation-item-content">
                    <div class="conversation-item-wrapper">
                        <div class="conversation-item-box">
                            <div class="conversation-item-text">
                                <p>@x.messages</p>
                                <div class="conversation-item-time">@x.date_time</div>
                            </div>
                            <div class="conversation-item-dropdown">
                                <button type="button" class="conversation-item-dropdown-toggle"><i class="ri-more-2-line"></i></button>
                                <ul class="conversation-item-dropdown-list">
                                    <li><a href="/User/deletemsg/@x.Id"><i class="ri-delete-bin-line"></i>Delete</a> </li>
                                </ul>
                            </div>
                        </div>
                    </div>

                </div>
            </li>

        }
        else if (x.From == myid && x.status == true)
        {
            <li class="conversation-item ">

                <div class="conversation-item-content">
                    <div class="conversation-item-wrapper">
                        <div class="conversation-item-box">
                            <div class="conversation-item-text">
                                <p>@x.messages</p>
                                <div class="conversation-item-time">@x.date_time</div>
                            </div>
                            <div class="conversation-item-dropdown">
                                <button type="button" class="conversation-item-dropdown-toggle"><i class="ri-more-2-line"></i></button>
                                <ul class="conversation-item-dropdown-list">
                                    <li><i class="ri-delete-bin-line"></i> @Html.ActionLink("Delete", "Profile", "Index")</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </li>

        }
    }



}
<script src="~/script.js"></script>







