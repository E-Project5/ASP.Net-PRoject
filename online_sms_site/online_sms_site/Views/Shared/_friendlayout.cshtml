<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <!--LINKING-->
    <link rel="icon" type="image/png" href="~/assets/images/title.png" />
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/friend_css/style.css">
    @*<link rel="stylesheet" href="~/friend_css/bootstrap.min.css">*@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

</head>

<body style="overflow:hidden">
    @{
        int id = 0;
        if (Session["user_id"] == null)
        {
            Response.Redirect("~/Home/Index");
        }
        else
        {
             id = Convert.ToInt16(Session["user_id"]);
        }
    }

    <!--NAVBAR START-->

    <nav class="navbar mb-0 navbar-expand-lg navbar-dark bg-dark probootstrap_navbar " style="" id="probootstrap-navbar">
        <div class="container">

            <a class="navbar-brand" style="letter-spacing:.3em;text-transform:uppercase" href="/">Online SMS Site</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#probootstrap-menu" aria-controls="probootstrap-menu" aria-expanded="false" aria-label="Toggle navigation">
                <span><i class="ion-navicon"></i></span>
            </button>
            <div class="collapse navbar-collapse" id="probootstrap-menu">

                <ul class="navbar-nav ml-auto">
                    <li class="nav-item "><a class="nav-link" href="~/Home/Profile">Profile</a></li>
                    <li class="nav-item"><a class="nav-link" href="~/User/index">Chatting</a></li>
                    <li class="nav-item"><a class="nav-link" href="~/User/texting">Texting</a></li>
                    <li class="nav-item @if (ViewBag.Title == "friend_list") { Write("active"); } "><a class="nav-link" href="~/User/Friend_List">Friend List</a></li>
                    <li class="nav-item @if (ViewBag.Title == "Services") { Write("active"); } "><a class="nav-link" href="~/Home/Services">Services</a></li>
                    <li class="nav-item">
                        <button class="nav-link bg-transparent" style="border:none"
                                data-bs-toggle="modal" data-bs-target="#exampleModal">
                            LogOut
                        </button>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!--NAVBAR END-->

    <!--LOGOUT MODAL START-->

    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Logout!</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    <div class="modal-body">
                        Are You Sure? Want to Log out?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        @Html.ActionLink("Yes", "Logout", "Home", new { id = @id }, new { @class = "btn btn-primary" })

                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--LOGOUT MODAL END-->


    <!--SIDEBAR START-->
    <div class="wrapper  d-flex align-items-stretch">
        <nav id="sidebar" style="background-image: url('/assets/images/cool-background.png'); background-repeat: no-repeat; background-size: cover;">


            <div class="custom-menu">
                <button type="button" id="sidebarCollapse" class="btn btn-primary">
                    <i class="fa fa-bars"></i>
                    <span class="sr-only">Toggle Menu</span>
                </button>
            </div>
            <div class="p-4 pt-5">



                <center>
                    <div class="profile">
                        <img class="profile-picture" style="border-radius: 50%;width:150px " src="@Url.Content(Convert.ToString(Session["myphoto"]))" />
                    </div>
                </center>
                <hr style="border:1px solid black" />
                <ul class="list-unstyled components mb-5">
                    <li class="@if (ViewBag.Title == "friend_list") { Write("active"); } " style="font-size:25px;">
                        <a href="~/User/friend_list">Friend List</a>
                    </li>


                    <li class="@if (ViewBag.Title == "friend_request") { Write("active"); } " style="font-size:25px;">
                        <a href="~/User/friend_request">Request List</a>
                    </li>

                    <li class="@if (ViewBag.Title == "contact_List") { Write("active"); } " style="font-size:25px;">
                        <a href="~/User/contact_list">Contact List</a>
                    </li>

                    <li class="@if (ViewBag.Title == "suggestion") { Write("active"); }" style="font-size:25px;">
                        <a href="~/User/suggestion">Suggestions</a>
                    </li>
                </ul>


            </div>
        </nav>
        <div class="container">

            <!-- Page Content  -->
            <div id="content" class="p-2 p-md-5 pt-5" style=" overflow-y: scroll; height: 500px;">
                <div class="row mt-2">

                    @RenderBody()
                </div>
            </div>
        </div>

    </div>
    <!--SIDEBAR END-->

    <!--SCRIPTING-->
    <script src="~/friend_js/bootstrap.min.js"></script>
    <script src="~/friend_js/jquery.min.js"></script>
    <script src="~/friend_js/main.js"></script>
    <script src="~/friend_js/popper.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

</body>
</html>
