@{
    int id = 0;
    if (Session["user_id"] == null)
    {
        Response.Redirect("~/Home/Index");
    }
    else
    {
        id = Convert.ToInt16(Session["user_id"]);
    }
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Online Online SMS Site</title>
    <link rel="icon" type="image/png" href="~/assets/images/title.png" />


    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.2.0/fonts/remixicon.css" rel="stylesheet">
    <link rel="stylesheet" href="~/tailwindcss-colors.css">
    <link rel="stylesheet" href="~/chat_style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

</head>
<body>

    <!--LOGOUT MODAL START-->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Logout!</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are You Sure? Want to Log out?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    @Html.ActionLink("Yes", "Logout", "Home", new { id = @id }, new { @class = "btn btn-primary" })


                </div>
            </div>
        </div>
    </div>
    <!--LOGOUT MODAL END-->

    <!--SECTION START-->
    <section class="chat-section ">
        <div class="chat-container">
            <!-- start: Sidebar -->
            <aside class="chat-sidebar">
                @*<a href="#" class="chat-sidebar-logo">
                        <i class="ri-chat-1-fill"></i>
                    </a>*@
                <ul class="chat-sidebar-menu">
                    <li class="@if (ViewBag.Title == "texting") { Write("active"); } "><a href="/User/texting" data-title="Texts"> <i class="ri-message-2-line"></i></a></li>
                    <li class="@if (ViewBag.Title == "Index") { Write("active"); } "><a href="/User/Index" data-title="Chats"><i class="ri-chat-3-line"></i></a></li>
                    <li @if (ViewBag.Title == "contact_List") { Write("active"); }><a href="/User/contact_List" data-title="Contact List"><i class="ri-contacts-line"></i></a></li>
                    <li><a href="/User/friend_list" data-title="Friend List"><i class="ri-team-line"></i></a></li>
                    <li class="chat-sidebar-profile">
                        <button type="button" class="chat-sidebar-profile-toggle">
                            <img src="@Url.Content(Convert.ToString(Session["myphoto"]))" alt="">
                        </button>
                        <ul class="chat-sidebar-profile-dropdown">
                            <li><a href="/Home/Profile"><i class="ri-user-line"></i> Profile</a></li>
                            <li>
                                <a href="#" data-bs-toggle="modal" data-bs-target="#exampleModal"><i class="ri-logout-box-line"></i> Logout</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </aside>
            <!-- start: Content -->
            <div class="chat-content">
                @RenderBody()
            </div>
        </div>
    </section>
    <!--SECTION END-->

    <!--SCRIPT LINKING -->
    <script src="~/script.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

</body>
</html>
